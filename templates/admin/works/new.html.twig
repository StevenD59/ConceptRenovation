{% extends 'admin/index.html.twig' %}

{% block title %}Concept Rénovation - Ajouter une réalisation
{% endblock %}

{% block body %}
	<div class="col-12 col-xl-10 text-center">
		<h1 class="mb-5">Ajouter une réalisation</h1>
		<div class="col-12 col-md-9 color_div mx-auto rounded p-2">
			{{ form_start(form) }}
			<div class="form-group row">
				<label for="inputEmail3" class="col-sm-3 col-form-label mx-auto">Titre réalisation:</label>
				<div class="col-sm-8 mx-auto">
					{{ form_widget(form.title) }}
				</div>
			</div>
			<div class="form-group row">
				<div class="mx-auto">
					<label class="custom-label" for="images">Télécharger une image</label>
					<div class="col-12">
						{% for message in app.flashes('alerte') %}
							<div class="alert alert-danger">
								{{ message }}
							</div>
						{% endfor %}
						{{ form_widget(form.images, {'class': 'custom-file-input'}) }}
					</div>
				</div>
			</div>
			<div class="form-group row">
				<label for="description" class="col-sm-3 col-form-label mx-auto">Description:</label>
				<div class="col-sm-8 mx-auto">
					{{ form_widget(form.description) }}
				</div>
			</div>

			<button type="submit" class="btn btn-light my-2">Ajouter</button>

			{{ form_end(form) }}
		</div>

	</div>
{% endblock %}
