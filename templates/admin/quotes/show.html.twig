{% extends "admin/index.html.twig" %}

{% block title %}Concept Rénovation - Devis{% endblock %}

{% block body %}

	<div class="backgroundMenu col-xl-5 mx-auto py-2 my-4">
		<div class="form-group row col-12 col-xl-8 mx-auto d-flex justify-content-center">
			<div class="col-12">
				<label for="nom">Nom :</label>
				<input type="text" readonly class="form-control" id="nom" value="{{ quote.name }}">
			</div>
		</div>
		<div class="form-group row form-group row col-12 col-xl-8 mx-auto d-flex justify-content-center">
			<div class="col-12">
				<label for="email">Email :</label>
				<input type="email" readonly class="form-control" id="email" value="{{ quote.email }}">
			</div>
		</div>
		<div class="form-group row col-12 col-xl-8 mx-auto d-flex justify-content-center">
			<div class="col-12">
				<label for="number">N° de téléphone :</label>
				<input type="text" readonly class="form-control" id="number" value="{{ quote.phoneNumber }}">
			</div>
		</div>
		<div class="form-group row col-12 col-xl-8 mx-auto d-flex justify-content-center">
			<div class="col-12">
				<label for="categories">Catégories travaux</label>
				<input type="text" readonly class="form-control" id="categories" value="{{ quote.services.categories.name }}">
			</div>
		</div>
		<div class="form-group row col-12 col-xl-8 mx-auto d-flex justify-content-center">
			<div class="col-12">
				<label for="categories">Services:</label>
                <input type="text" readonly class="form-control" id="number" value="{{ quote.services }}">
			</div>
		</div>

		<div class="form-group row col-12 col-xl-8 mx-auto d-flex justify-content-center">
			<div class="col-12">
				<label for="text">Mètre(s) linéaire(s) :</label>
				<input type="text" readonly class="form-control" id="number" value="{{ quote.ml }}">
			</div>
		</div>

		<div class="form-group row col-12 col-xl-8 mx-auto d-flex justify-content-center">
			<div class="col-12">
				<label for="text">Mètre(s) carré(s)) :</label>
				<input type="text" readonly class="form-control" id="number" value="{{ quote.mc }}">
			</div>
		</div>

		<div class="form-group row col-12 col-xl-8 mx-auto d-flex justify-content-center">
			<div class="col-12">
				<label for="message">Message :</label>
				<textarea class="form-control" id="message" rows="3">{{ quote.message }}</textarea>
			</div>
		</div>
	</div>
{% endblock %}
