{% extends 'admin/index.html.twig' %}

{% block title %}Concept RÃ©novation - Liste des devis{% endblock %}

{% block body %}
	<div class="col-12 col-md-10 text-center">
		<h1 class="mb-5">Liste des devis</h1>

		<table class="table">
			<thead>
				<tr>
					<th class="col-6">Nom</th>
					<th class="col-6">Actions</th>
				</tr>
			</thead>
			<tbody>


				{% for quote in quotes %}
					<tr>
						<th scope="row">{{ quote.name }}</th>
						<!-- TABLEAU RESPONSIVE TELEPHONE -->
						<td class="pt-3 d-md-none ">
							<div class="d-flex justify-content-around">
								<a class="fas fa-search fa-lg colorIconTab" href="#"></a>
								<a class="fas fa-edit fa-lg colorIconTab" href="#"></a>
								<a class="fas fa-trash-alt fa-lg colorIconTab" href="#"></a>
							</div>
						</td>
						<!-- TABLEAU TAILLE "NORMAL" -->
						<td class="d-none d-md-block">
							<div class="btn-group btn-group-toggle" data-toggle="buttons">
								<div>
									<a class="btn btn-secondary" href="{{ path('quotes_show', {'id' : quote.id} ) }}">Voir</a>
								</div>
								<div>
								{{ include('admin/quotes/_delete_form.html.twig') }}
								</div>
							</div>
						</td>
					</tr>
				{% endfor %}


			</tbody>
		</table>
	</div>
{% endblock %}
