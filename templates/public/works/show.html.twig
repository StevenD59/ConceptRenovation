{% extends 'public/index.html.twig' %}

{% block title %}Concept Rénovation - Réalisations
{% endblock %}


{% block body %}

	<h3 class="backgroundTitle mt-2 text-center">Nos réalisations</h3>


	{% for works in realisations %}
		<div class="text-center">
			<h5 class="backgroundTitle">{{ works.title }}</h5>
		</div>

		<div id="my-carousel" class="carousel slide d-md-none" data-ride="carousel">
			<div class="carousel-inner">
				{% for image in works.images %}
					<div class="carousel-item {% if loop.index == 1%} active {% endif %}">
						<img class="img-fluid heightPicCarouselReal" src="{{ asset('assets/img/' ~ image.name ) }}" alt="">
					</div>
				{% endfor %}
			</div>
			<a class="carousel-control-prev" href="#my-carousel" data-slide="prev" role="button">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="carousel-control-next" href="#my-carousel" data-slide="next" role="button">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>


		<!-- PRESENTATION REALISATIONS MINIMUM IPAD -->


		<div class="d-none d-md-block text-center">
			<img src="{{ asset('assets/img/' ~ works.images[0].name ) }}" alt="" class="grde-img sizeBigImageRealisation img-fluid">
			<div class="row mt-2 mb-2">
				{% for image in works.images %}
					<div class="col-md-6 col-xl-3 my-5">
						<img src="{{ asset('assets/img/' ~ image.name ) }}" alt="" class="img-fluid sizeImageRealisation monImage">
					</div>
				{% endfor %}
			</div>
		</div>


		<div>
			<h4 class="text-center my-3">{{ works.description }}
			</h4>
		</div>

	{% endfor %}

	{{ knp_pagination_render(realisations) }}

{% endblock %}
