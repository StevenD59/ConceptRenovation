{% extends "public/index.html.twig" %}

{% block title %}Concept Rénovation - Devis
{% endblock %}

{% block body %}
	<h4 class="text-center my-4">Demandez votre devis !</h4>

	{% for message in app.flashes('success') %}
		<div class="alert alert-success text-center col-xl-8 mx-auto">
			{{ message }}
		</div>
	{% endfor %}

	<div class="backgroundColorContact col-xl-8 mx-auto py-2 marginDevis">
		{{ form_start(form) }}
		<div class="form-group row col-12 col-xl-8 mx-auto d-flex justify-content-center">
			<div class="col-12">
				<label for="nom">Nom :</label>
				{{ form_widget(form.name) }}
			</div>
		</div>
		<div class="form-group row form-group row col-12 col-xl-8 mx-auto d-flex justify-content-center">
			<div class="col-12">
				<label for="email">Email :</label>
				{{ form_widget(form.email) }}
			</div>
		</div>
		<div class="form-group row col-12 col-xl-8 mx-auto d-flex justify-content-center">
			<div class="col-12">
				<label for="number">N° de téléphone :</label>
				{{ form_widget(form.phoneNumber) }}
			</div>
		</div>
		<div class="form-group row col-12 col-xl-8 mx-auto d-flex justify-content-center">
			<div class="col-12">
				<label for="categories">Catégories travaux :</label>
				{{ form_widget(form.categories, { 'id': 'categories' } )}}
			</div>
		</div>
		<div class="form-group row col-12 col-xl-8 mx-auto d-flex justify-content-center">
			<div class="col-12">
				<label for="categories">Prestations :</label>
				{{ form_widget(form.services, { 'id': 'services' } )}}
			</div>
		</div>
		<div class="form-group row col-12 col-xl-8 mx-auto d-flex justify-content-center">
			<div class="col-12">
				<label for="number">Mètre(s) linéaire(s) :</label>
				{{ form_widget(form.ml) }}
			</div>
		</div>
		<div class="form-group row col-12 col-xl-8 mx-auto d-flex justify-content-center">
			<div class="col-12">
				<label for="number">Mètre(s) carré(s) :</label>
				{{ form_widget(form.mc) }}
			</div>
		</div>
		<div class="form-group row col-12 col-xl-8 mx-auto d-flex justify-content-center">
			<div class="col-12">
				<label for="message">Message :</label>
				{{ form_widget(form.message) }}
			</div>
		</div>

		<div class="form-check col-12 col-xl-8 mx-auto d-flex justify-content-center">
			<div class="col-2">
				<input class="form-check-input my-2 mx-0" name="check" type="checkbox" value="" id="defaultCheck1">
			</div>
			<div class="col-10">
				<label class="form-check-label" for="defaultCheck1">
					J'accepte les termes de la
					<a href="{{ path('politique')}}">politique de confidentialités</a>
				</label>
			</div>

		</div>

		<div class="col-12">
			<div class="form-group row form-group row col-12 col-xl-8 mx-auto d-flex justify-content-center">
				{% for message in app.flashes('check') %}
					<div class="alert alert-danger">
						{{ message }}
					</div>
				{% endfor %}
			</div>
		</div>

		<div class="col-12 d-flex justify-content-center mx-auto">
			<button class="btn bg-white">Envoyer</button>
		</div>

		{{ form_end(form) }}
	</div>


{% endblock %}
