{% extends "public/index.html.twig" %}

{% block title %}Concept Rénovation - Devis
{% endblock %}

{% block body %}
	<h4 class="text-center my-4">Demandez votre devis !</h4>

	{% for message in app.flashes('success') %}
		<div class="alert alert-success text-center">
			{{ message }}
		</div>
	{% endfor %}

	<div class="backgroundColorContact col-xl-8 mx-auto py-2 my-4">
		{{ form_start(form) }}
		<div class="form-group row col-12 col-xl-8 mx-auto d-flex justify-content-center">
			<div class="col-12">
				<label for="nom">Nom :</label>
				{{ form_widget(form.name) }}
			</div>
		</div>
		<div class="form-group row form-group row col-12 col-xl-8 mx-auto d-flex justify-content-center">
			<div class="col-12">
				<label for="email">Email :</label>
				{{ form_widget(form.email) }}
			</div>
		</div>
		<div class="form-group row col-12 col-xl-8 mx-auto d-flex justify-content-center">
			<div class="col-12">
				<label for="number">N° de téléphone :</label>
				{{ form_widget(form.phoneNumber) }}
			</div>
		</div>
		<div class="form-group row col-12 col-xl-8 mx-auto d-flex justify-content-center">
			<div class="col-12">
				<label for="categories">Catégories travaux</label>
				{{ form_widget(form.categories)}}
			</div>
		</div>
		<div class="form-group row col-12 col-xl-8 mx-auto d-flex justify-content-center">
			<div class="col-12">
				<label for="categories">Prestations</label>
				{{ form_widget(form.services) }}
			</div>
		</div>

		<div class="form-group row col-12 col-xl-8 mx-auto d-flex justify-content-center">
			<div class="col-12">
				<label for="message">Message :</label>
				{{ form_widget(form.message) }}
			</div>
		</div>

		<div class="col-12 d-flex justify-content-center mx-auto">
			<button class="btn bg-white">Envoyer</button>
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}
