{% extends 'base.html.twig' %}

{% block title %}Quotes{% endblock %}

{% block body %}
    <h1>Quotes</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ quote.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ quote.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ quote.email }}</td>
            </tr>
            <tr>
                <th>PhoneNumber</th>
                <td>{{ quote.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ quote.message }}</td>
            </tr>
            <tr>
                <th>IsRead</th>
                <td>{{ quote.isRead ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ quote.createdAt ? quote.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DeletedAt</th>
                <td>{{ quote.deletedAt ? quote.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Activate</th>
                <td>{{ quote.activate ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('quotes_index') }}">back to list</a>

    <a href="{{ path('quotes_edit', {'id': quote.id}) }}">edit</a>

    {{ include('quotes/_delete_form.html.twig') }}
{% endblock %}
